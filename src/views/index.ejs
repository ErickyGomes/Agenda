<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo.</p>

      <%- include('includes/messages') %>
      <% if(contatos.length > 0 ) { %>
      <div class="responsive-table">
        <table class="table table-hover my-3">
          <thead class="thead-dark">
            <tr>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th>Telefone</th>
              <th>Email</th>
              <th>Editar</th>
              <th>Apagar</th>
            </tr>
          </thead>
          <tbody>
            <% contatos.forEach (contato => { %>
            
              <tr>
                <td><%= contato.nome %></td>
                <td><%= contato.sobrenome %></td>
                <td><%= contato.telefone %></td>
                <td><%= contato.email %></td>
                <td><a class="btn btn-info" href="/contato/<%= contato._id %>">Editar</a> </td>
                <td><a class="btn btn-outline-danger" href="/contato/delete/<%= contato._id %>">Apagar</a></td>
              </tr>


            <% }); %>
            
          </tbody>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Não existem contatos na sua agenda.</p>
      <% } %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>



<%- include('includes/footer'); %>
